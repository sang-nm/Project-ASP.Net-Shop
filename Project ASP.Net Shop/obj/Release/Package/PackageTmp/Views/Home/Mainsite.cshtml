<!-- Container (The Category Section) -->
<div id="category" class="container text-center">
    <h3>Category</h3>
    @if (Model.Prod != null)
    {
        int i = 0;
        foreach (var item in Model.Prod)
        {

            if (i != 0 && i % 3 == 0)
            {
                @:</div>
            }
            if (i % 3 == 0)
            {
                @:<div class="row">
            }
            <div class="col-sm-4" style="border-bottom:1px solid #fff">
                <p class="text-center"><strong>@item.ProductName</strong></p><br>
                <a href="#@item.ID" data-toggle="collapse">
                    <img src="@Url.Content(@item.ProductThumbnail)" class="img-responsive person" alt="Random Name" width="255" height="255">
                </a>
                <div id="@item.ID" class="collapse">
                    <p>Producer: @item.Producer</p>
                    <p>Price: @item.Price</p>
                    <p>Description: @item.Description</p>
                    <button class="btn" data-toggle="modal" data-target="#myModal">Buy</button>
                    @Html.ActionLink("View","LaptopDetail", "Home", new { paramSpec = @item.Specifications }, new { @class = "btn" })
                </div>
            </div>
            i++;
        }
        @:</div>
    }
</div>


